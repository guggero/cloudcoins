# @AngularClass
# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single

[*.js]
quote_type = single

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[pom.xml]
indent_size = 4

[*.java]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf
